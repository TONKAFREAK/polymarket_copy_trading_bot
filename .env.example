# ============================================
# POLYMARKET COPY TRADER - ENVIRONMENT CONFIG
# ============================================
# ⚠️  WARNING: Never commit this file with real values!
# ⚠️  This bot can lose money. Use at your own risk.

# ============================================
# WALLET & AUTHENTICATION (REQUIRED)
# ============================================

# Your Ethereum private key (without 0x prefix)
# This wallet will execute the copied trades
PRIVATE_KEY=your_private_key_here_without_0x

# Polymarket API credentials (obtain from Polymarket)
# If using CLOB API key authentication
POLY_API_KEY=
POLY_API_SECRET=
POLY_PASSPHRASE=

# ============================================
# NETWORK CONFIGURATION
# ============================================

# Chain ID: 137 for Polygon Mainnet, 80001 for Mumbai Testnet
CHAIN_ID=137

# RPC endpoint for Polygon (optional, uses default if not set)
# Recommended: Use a private RPC from Alchemy, Infura, or QuickNode
RPC_URL=https://polygon-rpc.com

# ============================================
# POLYMARKET API ENDPOINTS
# ============================================

# CLOB API endpoint
CLOB_API_URL=https://clob.polymarket.com

# Data API endpoint (for tracking target trades)
DATA_API_URL=https://data-api.polymarket.com

# Gamma API endpoint (for market metadata)
GAMMA_API_URL=https://gamma-api.polymarket.com

# ============================================
# PERSISTENCE (OPTIONAL)
# ============================================

# Use Redis for persistence (default: false, uses JSON files)
USE_REDIS=false

# Redis connection string (only needed if USE_REDIS=true)
REDIS_URL=redis://localhost:6379

# Data directory for JSON file persistence
DATA_DIR=./data

# ============================================
# LOGGING
# ============================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable JSON file logging (in addition to console)
LOG_TO_FILE=true

# Log file path
LOG_FILE=./data/logs/pmcopy.log

# ============================================
# DEFAULT TRADING CONFIGURATION
# ============================================

# Polling interval in milliseconds (default: 500, min recommended: 300)
# Lower values = faster trade detection but more API calls
POLL_INTERVAL_MS=500

# Default sizing mode: fixed_usd, fixed_shares, proportional
SIZING_MODE=fixed_usd

# Default USD amount per trade (for fixed_usd mode)
DEFAULT_USD_SIZE=10

# Default shares per trade (for fixed_shares mode)
DEFAULT_SHARES_SIZE=10

# Proportional multiplier (for proportional mode, e.g., 0.25 = 25% of target size)
PROPORTIONAL_MULTIPLIER=0.25

# Slippage tolerance (0.01 = 1%)
SLIPPAGE=0.01

# ============================================
# RISK CONTROLS
# ============================================

# Maximum USD per single trade
MAX_USD_PER_TRADE=100

# Maximum USD exposure per market
MAX_USD_PER_MARKET=500

# Maximum daily USD volume
MAX_DAILY_USD_VOLUME=1000

# Dry run mode (true = no real trades, just logging)
DRY_RUN=true

# ============================================
# PAPER TRADING (SIMULATED TRADING)
# ============================================

# Enable paper trading mode (simulates trades with virtual funds)
# When true, trades are executed in simulation with PnL tracking
# When false with DRY_RUN=false, real trades are executed
PAPER_TRADING=true

# Starting balance for paper trading (in USD)
PAPER_STARTING_BALANCE=1000

# Simulated trading fee rate (0.001 = 0.1%)
PAPER_FEE_RATE=0.001
