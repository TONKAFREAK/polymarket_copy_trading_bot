{
  "name": "polymarket-copy-trader",
  "version": "1.0.0",
  "description": "Polymarket copy-trading bot - CLI and Desktop App",
  "main": "dist/cli.js",
  "bin": {
    "pmcopy": "./dist/cli.js"
  },
  "scripts": {
    "cli": "tsx src/cli.ts",
    "cli:build": "tsc",
    "cli:start": "node dist/cli.js",
    "client": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:install": "cd client && npm install",
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "install:all": "npm install && cd client && npm install",
    "postinstall": "echo Run 'npm run client:install' to install client dependencies"
  },
  "keywords": [
    "polymarket",
    "trading",
    "copy-trading",
    "clob",
    "prediction-markets",
    "electron",
    "desktop-app"
  ],
  "author": "TONKAFREAK",
  "license": "MIT",
  "dependencies": {
    "@polymarket/builder-signing-sdk": "^0.0.8",
    "@polymarket/clob-client": "^4.4.0",
    "@polymarket/real-time-data-client": "^1.4.0",
    "@types/blessed": "^0.1.27",
    "axios": "^1.6.7",
    "blessed": "^0.1.81",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "dotenv": "^16.4.1",
    "ethers": "^5.7.2",
    "ioredis": "^5.3.2",
    "ora": "^5.4.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
